%h1 New Checkin
%div
  .input-group
    = form_for :checkin, url: checkins_path do |f|
      %p
      = f.label :weight
      %br
      = f.text_field :weight, { autocomplete: :off, class: "form-control" }
      - options = @people.map { |person| [person.name, person.id] }
      = f.select :person_id, options_for_select(options)
      %br
      = f.submit class: "btn btn-primary"

%h3
  %a= link_to('Back', people_path)
